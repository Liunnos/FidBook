            li
                a#logoutbtn(href='#')
                    div Log Out
            li
                a(href='/about')
                    div About us
            li
                a(href='/me')
                    div My settings
    main.main
        .main-container
            .container-one-card
                .barcode-container
                    .barcode-input-container-info
                        form.signup-form#cardId(data-cardId= `${card.id}`)
                            .form-group
                                label(for='name') name of the card
                                input#name(type='text' name='name' required='' placeholder='card name' value=`${card.name}` )
                            .form-group
                                label(for='card-number') Card number
                                input#card-number(name='card-number' value=`${card.code}` type='text' placeholder='card code' data-barcode= `${card._id}`)
                            .form-group
                                button.btn.btn--blue#btn-edit-card Edit Card
                                   
            aside.aside-menu
                ul
                    li
                        a(href='/overview') Back to the book
    footer.footer
        ul
            li
                a(href='/overview')
                    svg.icon-back(xmlns='http://www.w3.org/2000/svg' viewbox='0 0 24 24')
