            a(href='/menu')
                svg.icon-burger(xmlns='http://www.w3.org/2000/svg' viewbox='0 0 24 24' fill='black')
                    path(d='M0 0h24v24H0z' fill='none')
                    path(d='M3 18h18v-2H3v2zm0-5h18v-2H3v2zm0-7v2h18V6H3z')
