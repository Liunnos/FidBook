block content
    
    header.header
        .header-logo
            a(href='/overview')
                svg.icon-logo(xmlns='http://www.w3.org/2000/svg' viewbox='0 0 24 24')
                    path(d='M0 0h24v24H0z' fill='none')
                    path(d='M2.53 19.65l1.34.56v-9.03l-2.43 5.86c-.41 1.02.08 2.19 1.09 2.61zm19.5-3.7L17.07 3.98c-.31-.75-1.04-1.21-1.81-1.23-.26 0-.53.04-.79.15L7.1 5.95c-.75.31-1.21 1.03-1.23 1.8-.01.27.04.54.15.8l4.96 11.97c.31.76 1.05 1.22 1.83 1.23.26 0 .52-.05.77-.15l7.36-3.05c1.02-.42 1.51-1.59 1.09-2.6zM7.88 8.75c-.55 0-1-.45-1-1s.45-1 1-1 1 .45 1 1-.45 1-1 1zm-2 11c0 1.1.9 2 2 2h1.45l-3.45-8.34v6.34z')
                h1 FidBook
        .burger
            a(href='/menu')
                svg.icon-burger(xmlns='http://www.w3.org/2000/svg' viewbox='0 0 24 24' fill='black')
                    path(d='M0 0h24v24H0z' fill='none')
                    path(d='M3 18h18v-2H3v2zm0-5h18v-2H3v2zm0-7v2h18V6H3z')
        ul.nav-bar
            li
                a#logoutbtn(href='#')
                    div Log Out
            li
                a(href='/about')
                    div About us
            li
                a(href='/me')
                    div My settings
    main.main
        .main-container
            .container
                .card-container
                    each card in cardbyuser
                        a.card(href=`/card/${card.id}`)= card.name.charAt(0).toUpperCase() + card.name.slice(1)
                    
                    .placeholder-card
                    .placeholder-card
            aside.aside-menu
                ul
                    li
                        a(href='/newCard') Add new
                    li
                        a(href='/overview?sort=name') Sort alpha
                    li
                        a(href='/overview?sort=-usage') Sort
    footer.footer
        ul
            li
                a(href='/newCard')
                    svg.add-new(xmlns='http://www.w3.org/2000/svg' viewbox='0 0 24 24' fill='white')
                        path(d='M0 0h24v24H0z' fill='none')
                        path(d='M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z')
            li
                a(href='/overview?sort=name')
                    svg.sort-alpha(xmlns='http://www.w3.org/2000/svg' viewbox='0 0 24 24' fill='black')
                        path(d='M0 0h24v24H0V0zm0 0h24v24H0V0zm.75.75h22.5v22.5H.75z' fill='none')
