        .burger
            a(href='/menu')
                svg.icon-burger(xmlns='http://www.w3.org/2000/svg' viewbox='0 0 24 24' fill='black')
                    path(d='M0 0h24v24H0z' fill='none')
                    path(d='M3 18h18v-2H3v2zm0-5h18v-2H3v2zm0-7v2h18V6H3z')
        ul.nav-bar
            li
                a#logoutbtn(href='#')
                    div Log Out
            li
                a(href='/about')
                    div About us
            li
                a(href='/changeMyPassword')
                    div Change my password
    main.main
        .container-signup-form
            .subtitle-container
                h2.subtitle Settings
                span.subtitle-sub About me
            form.signup-form
                .form-group
                    label(for='email') Email address
                    input#email(type='email' name='email' required='' placeholder='Your email' value=`${user.email}`)
                .form-group
                    label(for='name') name
                    input#name(type='text' name='name' required='' placeholder='Benoit' value=`${user.name}`)
                .form-group
                    button.btn.btn--blue#modify-account Save change
                    
                .form-group
                    a.btn-sign-up-link.btn.btn--blue#change-password(href="/changeMyPassword")  Change my password
                    
    footer.footer
        ul
            li
                a(href='/about')
                    svg.icon-info(xmlns='http://www.w3.org/2000/svg' viewbox='0 0 24 24')
                        path(d='M0 0h24v24H0z' fill='none')
